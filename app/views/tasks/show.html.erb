<div class="my-5 d-flex justify-content-center text-center">
  <div>

    <%= render @task %>

    <% if policy(@task).edit? %> 
      <%= button_to "Edit this task", edit_task_path(@task), class: 'btn btn-info mt-3', method: :get %>
    <% end %>
    
    <%= button_to "Back to tasks", tasks_path, class: 'btn btn-info mt-3', method: :get %>
  </div>
</div>
