<h1>Tasks</h1>

<div>
  <% @users.each do |user| %>
    <p>
      <%= link_to user.email, user %>
    </p>
  <% end %>
</div>

<div>
  <table class="table table-bordered">
  <thead class='table-dark'>
    <tr>
      <th scope="col">Executor</th>
      <th scope="col">Created</th>
      <th scope="col">Task</th>
      <th scope="col">Task status</th>
      <th scope="col">Updated</th>
    </tr>
  </thead>
  <tbody>

  <% @tasks.each do |task| %> 
    <tr class="table-<%= table_tr_color(task.status) %>">
      <th scope="row"><%= link_to task.user.full_name, user_path(task.user), 
        class: 'link-success' %></th>
      <td><%= l(task.created_at, format: :short) %></td>
      <td><%= link_to task.title, task_path(task), class: 'link-success' %></td>
      <td><%= task.status.upcase %></td>
      <td><%= l(task.updated_at, format: :short) %></td>
    </tr>
    <% end %>

  </tbody>
</table>
</div>
