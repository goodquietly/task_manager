<div>  
  <h2 class='text-center'>Task <b><%= task.id %></b> for <b><%= link_to task.user.full_name, 
    user_path(task.user), class: 'link-success' %></b>

  <%= form_with model: task, data: {turbo: false} do |form| %>
    <%= form.hidden_field :user_id %>

    <div class="d-grid gap-2 col-8 mx-auto my-3 text-center mt-5">
        <%= form.label :title, 'Task title', class: 'form-label', for: 'exampleFormControlTextarea1' %>
        <%= form.text_area :title, rows: 5, class: 'form-control', id: 'exampleFormControlTextarea1' %>
    </div>
    <div class="d-grid gap-2 col-8 mx-auto mb-5">
      <%= form.submit 'Save', class: 'btn btn-secondary' %>
    </div>  
  <% end %>
  
</div>
